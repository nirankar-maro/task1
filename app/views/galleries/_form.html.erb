<% if @gallery.image != nil %>
<div class="col-md-12 gallery-image">
  <img src="<%= @gallery.image_url%>" alt="" width="200" height="200"/>
</div>
<% else %>

<% end %>
<%= form_for @gallery,:html => {:class => "form-inline gallery-new"} do |f| %>
<% if @gallery.errors.any? %>
  <% @gallery.errors.full_messages.each do |error| %>
    <%=  js add_gritter(error, title: "Task1 Notification", sticky: false,time: 5000) %>
  <% end%>
  <%end%>
  <div class="form-group">
    <label for="name">
      Name
    </label>

      <%= f.text_field :name, class: "form-control", required: true,id:"input" %>
  </div>
  <div class="form-group">
    <label for="image">
      Image
    </label>

      <%= f.file_field :image, class: "form-control", required: true %>

  </div>
  <div class="form-group">
      <%= f.submit "submit",class: "btn btn-success btn-block",id: 'submit'%>
  </div>
<% end %>
<script>
(function() {
    $('#input').keyup(function() {

        var empty = false;
        $('#input').each(function() {
            if ($(this).val() == '') {
                empty = true;
            }
        });

        if (empty) {
            $('#submit').attr('disabled', 'disabled');
        } else {
            $('#submit').removeAttr('disabled');
        }
    });
})()


</script>
