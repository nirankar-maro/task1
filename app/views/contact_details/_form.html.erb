
<%= form_for @contact_detail do |f| %>
<% if @contact_detail.errors.any? %>
  <% @contact_detail.errors.full_messages.each do |error| %>
    <%=  js add_gritter(error, title: "Task1 Notification", sticky: false,time: 5000) %>
  <% end%>
  <%end%>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2">
      Name
    </label>
    <div class="col-sm-10">
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
</br>
</br>
</br>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2 control-label">
      Email
    </label>
    <div class="col-sm-10">
      <%= f.email_field :email, class: "form-control", required: true %>
    </div>
  </div>
</br>
</br>
</br>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2">
      Mobile Number
    </label>
    <div class="col-sm-10">
      <%= f.text_field :mobile_no, class: "form-control" , required: true%>
    </div>
  </div>
</br>
</br>
</br>
  <div class="form-group">
    <label for="inputEmail3" class="col-sm-2">
      Message
    </label>
    <div class="col-sm-10">
      <%= f.text_area :message, class: "form-control",row: "15", required: true %>
    </div>
  </div>
</br>
</br>
</br>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Contact us",class: "btn btn-success btn-block"%>
    </div>
  </div>
<% end %>
