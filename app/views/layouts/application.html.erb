<!DOCTYPE html>
<html>
  <head>
    <title>Task1</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
    	<div class="row">
        <div class="col-md-12">
          <% if login? %>
          <%= render  "shared/header" %>
          <%else%>
          <% end%>
        <%= yield %>
        <% if login? %>
          <%= render  "shared/footer" %>
          <%else%>
          <%end%>
      </div>
      </div>
    </div>
    <%= render "shared/notification" %>
  </body>
</html>
